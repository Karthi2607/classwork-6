#include <stdio.h>

int main()
{
    int n = 5, i;
    float sum = 0, avg;
    
    int arr[] = {10, 20, 30, 40, 50};
    
    printf("Array elements: ");
    for(i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
        sum += arr[i];
    }
    
    avg = sum / n;
    
    printf("\n\nThe sum of the array elements is: %.2f\n", sum);
    printf("The average of the array elements is: %.2f\n", avg);
    
    return 0;
}
